{
  "name": "algorithms",
  "version": "0.0.1",
  "description": "Algorithms and data structures implemented in JavaScript with explanations and links to further readings",
  "main": "index.js",
  "scripts": {
    "lint": "prettier --write './src/**/*.ts'",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watchAll --coverage",
    "ci": "yarn lint && yarn test:coverage",
    "cm": "npx git-cz"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn ci"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Guhotifoli/algorithms.git"
  },
  "keywords": [
    "algorithms"
  ],
  "author": "Guhotifoli",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Guhotifoli/algorithms/issues"
  },
  "homepage": "https://github.com/Guhotifoli/algorithms#readme",
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@types/jest": "^25.1.3",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.1.0",
    "git-cz": "4.3.1",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "lint-staged": "^10.0.8",
    "prettier": "^2.0.5",
    "ts-jest": "^25.2.1",
    "typescript": "^3.8.3"
  }
}
